{
    "version": "1.22.0",
    "description": "Frontend for emulators, game engines and media players.",
    "homepage": "https://www.retroarch.com/",
    "license": "GPL-3.0-only",
    "architecture": {
        "64bit": {
            "url": "https://buildbot.libretro.com/stable/1.22.0/windows/x86_64/RetroArch.7z",
            "hash": "ad50b0cd3f17edec18ec90b71dc1e97a01551f8a0794bef7e552327cff1fc3bd",
            "extract_dir": "RetroArch-Win64"
        }
    },
    "pre_install": [
        "if (!(Test-Path $persist_dir\\retroarch.cfg)) { Copy-Item $dir\\retroarch.default.cfg $dir\\retroarch.cfg }"
    ],
    "bin": "retroarch.exe",
    "shortcuts": [
        [
            "retroarch.exe",
            "RetroArch"
        ]
    ],
    "persist": [
        "assets\\wallpapers",
        "cores",
        "cheats",
        "config",
        "downloads",
        "playlists",
        "recordings",
        "saves",
        "screenshots",
        "shaders\\presets",
        "states",
        "system",
        "thumbnails",
        "retroarch.cfg"
    ],
    "checkver": {
        "url": "https://www.retroarch.com/?page=platforms",
        "regex": "The current stable version is:\\s+([\\d.]+)</"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://buildbot.libretro.com/stable/$version/windows/x86_64/RetroArch.7z"
            }
        }
    }
}

